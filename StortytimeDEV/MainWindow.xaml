<Window x:Class="StortytimeDEV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!--left section-->
        <Border CornerRadius="10 0 0 10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#223266" Offset="0" />
                    <GradientStop Color="#462AD8" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 35 0 0">
                <Image Source="/Images/new.png" Width="150" Height="50" Stretch="Uniform"/>
            </StackPanel>
            <Separator Height="0.8" Margin="20 30" Background="#46558a"></Separator>

            <!--menu items-->

            <Button Style="{StaticResource menuButtonActive}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}" />
                    <TextBlock Text="HOME" Style="{StaticResource menuButtonText}" />
                </StackPanel>
            </Button>

            <Button Style="{StaticResource menuButton}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="Film" Style="{StaticResource menuButtonIcon}" />
                    <TextBlock Text="BROWSE" Style="{StaticResource menuButtonText}" />
                </StackPanel>
            </Button>

            <Button Style="{StaticResource menuButton}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="bolt" Style="{StaticResource menuButtonIcon}" />
                    <TextBlock Text="TRENDING" Style="{StaticResource menuButtonText}" />
                </StackPanel>
            </Button>

            <Button Style="{StaticResource menuButton}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="Lightbulb" Style="{StaticResource menuButtonIcon}" />
                    <TextBlock Text="ABOUT US" Style="{StaticResource menuButtonText}" />
                </StackPanel>
            </Button>

            <Separator Height="0.8" Margin="20 40 20 20" Background="#46558a"/>

            <Button Style="{StaticResource menuButton}" Click="LogoutButton_Click">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="SignOutAlt" Style="{StaticResource menuButtonIcon}" />
                    <TextBlock Text="LOGOUT" Style="{StaticResource menuButtonText}" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!--main section-->
        <Border Grid.Column="1" CornerRadius="0 10 10 0" MouseDown="Border_MouseDown">
            <Border CornerRadius="10 0 0 10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#1B1448" Offset="0" />
                        <GradientStop Color="#462AD8" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="160"/>
                <RowDefinition Height="145"/>
                <RowDefinition Height="145"/>
            </Grid.RowDefinitions>

            <!-- Window Control Buttons -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0">
                <Button Style="{StaticResource windowControlButton}" Width="30" Height="30" Margin="0,0,5,0" Click="MinimizeButton_Click">
                    <fa:IconImage Icon="WindowMinimize" Width="12" Height="12" Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"/>
                </Button>
                <Button Style="{StaticResource closeButton}" Width="30" Height="30" Click="CloseButton_Click">
                    <fa:IconImage Icon="Xmark" Width="12" Height="12" Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"/>
                </Button>
            </StackPanel>

            <TextBlock Text="Have a Nice day , Admin" FontSize="19" Foreground="#ccd7ff" HorizontalAlignment="Left" Margin="18,19,0,0" Grid.Row="1"/>

                    <!--<Separator Height="0.8" Margin="15 50" Background="#46558a"></Separator>-->

                    <Grid Grid.Row="1" Margin="0 50 0 0">
                        
                        
                        
                        
                        
                    </Grid>









                    <!--<Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                       
                        
                        


                    </Grid.ColumnDefinitions>-->
                    
                </Grid>
                
                
                
            </Border>
        </Border>
    </Grid>
</Window>